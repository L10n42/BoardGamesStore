@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["AccessDenied"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">

            <h2 class="text-danger mb-4">@Localizer["AccessDenied"]</h2>

            <p class="lead">@Localizer["YouDoNotHavePermission"]</p>

            <p>@Localizer["PleaseContactTheAdministrator"]</p>

            <a href="/" class="btn btn-primary mt-3">@Localizer["ReturnToHomeButton"]</a>

        </div>
    </div>
</div>