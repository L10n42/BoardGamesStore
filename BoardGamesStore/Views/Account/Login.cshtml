@model BoardGamesStore.ViewModels.LoginViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Login"];
}

<div class="container mt-5">
    <div class="row">

        <div class="col-md-4 mt-4">

            <div class="mb-5">
                <h2 class="mb-4 text-center">@Localizer["Login"]</h2>
                <hr/>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" type="password" placeholder=" " />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary mt-4">@Localizer["LoginButton"]</button>
            </form>
        </div>

        <div class="col-md-8 d-flex justify-content-center">
            <img src="~/images/covers/playing_board_game.jpg" alt="Login Image" class="img-fluid" style="border-radius: 24px;" />
        </div>
    </div>
</div>

