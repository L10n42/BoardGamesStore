@model BoardGamesStore.Models.BoardGame

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mb-4 mt-2">Edit the Board Game</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BoardGameID" />
    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder=" " />
        <label asp-for="Name" class="form-label">Ім'я</label>
    </div>
    <div class="form-floating mb-3">
        <textarea asp-for="Description" class="form-control" placeholder=" "></textarea>
        <label asp-for="Description">Опис</label>
    </div>
    <div class="form-floating mb-3">
        <input type="number" asp-for="Price" class="form-control" step="0.01" placeholder=" " />
        <label asp-for="Price">Ціна</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="StockQuantity" class="form-control" placeholder=" " />
        <label asp-for="StockQuantity">Кількість в наявності</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="NumberOfPlayers" class="form-control" placeholder="" />
        <label asp-for="NumberOfPlayers">Кількість гравців</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="GameTimeMinutes" class="form-control" placeholder=" " />
        <label asp-for="GameTimeMinutes">Тривалість гри (хвилини)</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="SuggestedAge" class="form-control" placeholder=" " />
        <label asp-for="SuggestedAge">Рекомендований вік</label>
    </div>
    <div class="form-floating mb-4">
        <select asp-for="CategoryID" class="form-control" placeholder=" " asp-items="ViewBag.Categories"></select>
        <label asp-for="CategoryID">Категорія</label>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Наявні зображення</label>
        @if (Model.BoardGameImages != null && Model.BoardGameImages.Any())
        {
            <div class="row">
                @foreach (var image in Model.BoardGameImages)
                {
                    <div class="col-md-3">
                        <img src="@image.ImageUrl" alt="Board Game Image" class="img-thumbnail" />
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="existingImageIds" value="@image.BoardGameImageID" checked />
                            <label class="form-check-label">Залишити</label>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="form-group mb-4">
        <label for="images" class="form-label">Завантажити нові зображення</label>
        <input type="file" class="form-control" name="images" multiple />
    </div>

    <input type="submit" value="Зберегти" class="btn btn-primary mb-3" />
    <a asp-action="Index" class="btn btn-secondary  mb-3">Скасувати</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
