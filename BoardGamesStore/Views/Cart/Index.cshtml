@model BoardGamesStore.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Game</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.BoardGame.Name</td>
                <td>@item.Quantity</td>
                <td>@item.BoardGame.Price.ToString("0.00$")</td>
                <td>@(item.BoardGame.Price * item.Quantity).ToString("0.00$")</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Items: @Model.TotalItems</p>
<p>Total Price: @Model.TotalPrice.ToString("0.00$")</p>