@model BoardGamesStore.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mt-5">Edit category</h2>
<hr/>

<div class="row mt-5">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />

            <div class="form-floating">
                <input asp-for="CategoryName" class="form-control" placeholder=" " />
                <label asp-for="CategoryName" class="control-label"></label>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="d-flex mt-4">
                <input type="submit" value="Save" class="btn btn-primary me-3" />
                <a asp-action="Manage" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
