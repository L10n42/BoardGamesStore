@model IEnumerable<BoardGamesStore.Models.Category>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Categories"];
}

<div class="d-flex justify-content-between align-items-center mt-5">
    <h2 class="mb-0">@Localizer["Categories"]</h2>
    <a asp-action="Create" class="btn btn-primary">@Localizer["AddCategoryButton"]</a>
</div>

<div class="table-wrapper  mt-4">
    <table class="items-table">
        <thead>
            <tr>
                <th class="w-100">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Localizer["Actions"]
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.CategoryName)
                    </td>
                    <td class="d-flex align-items-center">
                        <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@category.CategoryID">@Localizer["EditButton"]</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryID">@Localizer["DeleteButton"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
