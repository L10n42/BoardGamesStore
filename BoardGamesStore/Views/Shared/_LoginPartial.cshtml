@using Microsoft.AspNetCore.Identity
@using BoardGamesStore.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-4">
            <p class="nav-text">Hello, @UserManager.GetUserName(User)</p>
        </li>

        <li class="nav-item">
            <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit" class="text-button">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>